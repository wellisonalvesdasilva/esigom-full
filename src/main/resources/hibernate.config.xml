<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
	
		<!-- Funcionalidades -->
		<mapping class="model.Cliente" />
		<mapping class="model.Servico" />
		<mapping class="model.Peca" />
		<mapping class="model.Orcamento" />
		<mapping class="model.OrcamentoItem" />
		<mapping class="model.OrdemServico" />
		<mapping class="model.Venda" />
		<mapping class="model.VendaItem" />
		<mapping class="model.Estoque" />
		<mapping class="model.EstoqueMovimentacao" />

		<!-- Spring Security -->
		<mapping class="model.PersistentLogin" />
		<mapping class="model.Usuario" />
		<mapping class="model.UserProfile" />
		<mapping class="model.UserProfileType" />

	</session-factory>
</hibernate-configuration>